.swiper {
  width: 100%;
  height: 600rpx;
}

.swiper image {
  width: 100%;
  height: 600rpx;
}

.post-container {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx 0;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.item {
  margin: 10rpx o 20rpx 10rpx;
}

.item-avatar {
  border: 1rpx solid transparent;
  width: 100rpx;
  height: 100rpx;
  border-radius: 500rpx;
  vertical-align: middle;
}

.item>text {
  margin-left: 20rpx;
  /*vertical-align: middle;*/
  margin-bottom: 5px;
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 20px;
  margin-top: 10px;
}

.post-image {
  width: 100%;
  height: 430rpx;
  margin: auto 0;
  margin-bottom: 15px;
  /*margin-left: 16px;*/
}

.post-content {
  color: #666;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  /*text-indent: 2em;*/
  margin: 0 10rpx 20rpx 10rpx;
  line-height: 42rpx;
}

.icon-collection {
  background: url('/images/icon/icons.jpg');
  background-position: 0 0;
}

.icon-great {
  background: url('/images/icon/icons.jpg');
  background-position: 90rpx 0;
}

.post-icon {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  background-size: 200px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like {
  font-size: 13px;
  flex: row;
  line-height: 16px;
  margin-left: 10px;
}

.post-like>text {
  vertical-align: middle;
  margin-right: 20px;
}
