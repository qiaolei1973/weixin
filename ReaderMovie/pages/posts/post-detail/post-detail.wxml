<view class="container">
  <image class="detail-img" 
  src="{{postData.headImgSrc}}"></image>
  <image class="audio" catchtap="onMusic" 
  src="{{isPlayMusic? '/images/icon/music-stop.png':'/images/icon/music-start.png'}}"></image>
  <view class='header'>
    <image src="{{postData.avatar}}" class="detail-avatar"></image>
    <text class="author">{{postData.author}}</text>
    <text class="const-text">发表于</text>
    <text class="date">{{postData.dateTime}}</text>
  </view>
  <text class="title">{{postData.title}}</text>
  <view class="tool">
    <view class="circle-img">
      <image catchtap="onCollectionTap" wx:if="{{collected}}" src="/images/icon/collection.png"></image>
      <image catchtap="onCollectionTap" wx:else src="/images/icon/collection-anti.png"></image>
      <image class="share-img" src="/images/icon/share.png" catchtap="onShareTap"></image>
    </view>
    <view class="horizon"></view>
  </view>
  <text class="detail">{{postData.detail}}</text>
</view>